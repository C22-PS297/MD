<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_card_history"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    card_view:cardCornerRadius="4dp">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/im_foto_sampah"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars"/>

    <TextView
        android:id="@+id/tv_nama_sampah"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Koran Bekas"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toEndOf="@+id/im_foto_sampah"
        card_view:layout_constraintTop_toTopOf="@+id/im_foto_sampah" />

    <TextView
        android:id="@+id/tv_jenis_sampah"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Jenis : Kertas"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        card_view:layout_constraintEnd_toEndOf="@id/tv_nama_sampah"
        card_view:layout_constraintStart_toStartOf="@+id/tv_nama_sampah"
        card_view:layout_constraintTop_toBottomOf="@+id/tv_nama_sampah" />

    <TextView
        android:id="@+id/tv_berat_sampah"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Berat : 10 Kg"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        card_view:layout_constraintEnd_toEndOf="@id/tv_jenis_sampah"
        card_view:layout_constraintStart_toStartOf="@+id/tv_jenis_sampah"
        card_view:layout_constraintTop_toBottomOf="@+id/tv_jenis_sampah" />

    <TextView
        android:id="@+id/tv_harga_sampah"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Harga : Rp. 20.000"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        card_view:layout_constraintEnd_toEndOf="@id/tv_berat_sampah"
        card_view:layout_constraintStart_toStartOf="@+id/tv_berat_sampah"
        card_view:layout_constraintTop_toBottomOf="@+id/tv_berat_sampah" />
    
</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>