<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.LogoutActivity">

    <TextView
        android:id="@+id/tv_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="200dp"
        android:text="Apakah Anda Yakin Ingin Logout?"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/btn_yes"/>

    <Button
        android:id="@+id/btn_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ya"
        android:layout_marginBottom="200dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_logout"
        app:layout_constraintEnd_toStartOf="@id/btn_no"
        app:layout_constraintStart_toStartOf="@+id/tv_logout"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/btn_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tidak"
        app:layout_constraintStart_toEndOf="@+id/btn_yes"
        app:layout_constraintEnd_toEndOf="@id/tv_logout"
        app:layout_constraintTop_toTopOf="@id/btn_yes"
        app:layout_constraintBottom_toBottomOf="@id/btn_yes"/>
</androidx.constraintlayout.widget.ConstraintLayout>